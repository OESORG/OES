@model IEnumerable<OES.Model.Examination.Semester>

@{
    ViewBag.Title = "Semesters";
    ViewBag.Page = "semester";
}

<p>
    @Html.ActionLink("Add New Semester", "Create")
</p>
<div class="row">
    <div class="col-md-12">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover dataTable no-footer">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.SemesterTitle)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.StartDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.EndDate)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.SemesterTitle)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StartDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EndDate)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.SemesterId }) |
                                @Html.ActionLink("Details", "Details", new { id = item.SemesterId }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.SemesterId })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

