<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Online Exameniation System</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/base/css")
    @Styles.Render("~/Content/font-awesome")
    @Styles.Render("~/Content/custom")
    @Styles.Render("~/Content/dataTables")
    @Styles.Render("~/Content/morris")
    @Scripts.Render("~/bundles/modernizr")
    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />
</head>

<body>
    <div id="wrapper">
        <nav class="navbar navbar-default navbar-cls-top " role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="index.html">Binary admin</a>
            </div>
            <!-- Login -->
            @Html.Action("_PartialLogin", "Account", new { area = "" })
        </nav>
        <!-- /. NAV TOP  -->
        <nav class="navbar-default navbar-side" role="navigation">
            <div class="sidebar-collapse">
                <ul class="nav" id="main-menu">
                    <li class="text-center">
                        <img src="/img/find_user.png" class="user-image img-responsive" />
                    </li>


                    <li>
                        <a class="@((ViewBag.Page == "course") ? "active-menu" : "")" href="/instructor"><i class="fa fa-book fa-2x"></i> Courses </a>
                    </li>
                    <li>
                        <a class="@((ViewBag.Page == "chapters") ? "active-menu" : "")" href="/instructor/chapters"><i class="fa fa-pencil fa-2x"></i> Chapters</a>
                    </li>
                    <li>
                        <a class="@((ViewBag.Page == "questions") ? "active-menu" : "")" href="/instructor/"><i class="fa fa-question-circle fa-2x"></i> Questions</a>
                    </li>
                    <li>
                        <a class="@((ViewBag.Page == "exams") ? "active-menu" : "")" href="/instructor/"><i class="fa fa-print fa-2x"></i>Exams</a>
                    </li>
                    <li>
                        <a class="@((ViewBag.Page == "students") ? "active-menu" : "")" href="/instructor"><i class="fa fa-users fa-2x"></i> Students</a>
                    </li>



                </ul>

            </div>

        </nav>
        <!-- /. NAV SIDE  -->
        <div id="page-wrapper">
            <div id="page-inner">
                @RenderBody()
            </div>
            <!-- /. PAGE INNER  -->
        </div>
        <!-- /. PAGE WRAPPER  -->
    </div>
    <!-- /. WRAPPER  -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/dataTables")
    @Scripts.Render("~/bundles/metisMenu")
    @Scripts.Render("~/bundles/raphael")
    @Scripts.Render("~/bundles/morris")
    @Scripts.Render("~/bundles/custom")
    @Scripts.Render("~/bundles/component")
    @Scripts.Render("~/bundles/controls")
    @RenderSection("scripts", required: false)

</body>
</html>
